{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/whatsapp",
        "function": "whatsappWebhook"
      },
      {
        "source": "/api/health",
        "function": "healthCheck"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
